# Environment Configuration for WCAG AI Platform Monorepo

# Node Environment
NODE_ENV=development

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/wcag_ai?schema=public"

# Redis Configuration (for BullMQ job queue)
REDIS_URL="redis://localhost:6379"

# OpenAI API Configuration
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2000

# Scanner Service Configuration
SCANNER_TIMEOUT=30000
MAX_CONCURRENT_SCANS=5
SCANNER_VIEWPORT_WIDTH=1920
SCANNER_VIEWPORT_HEIGHT=1080

# Dashboard Configuration (Next.js)
NEXT_PUBLIC_API_URL="http://localhost:4000"
NEXT_PUBLIC_DASHBOARD_URL="http://localhost:3000"

# API Keys (Optional)
SERPAPI_KEY="your_serpapi_key_here"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_SUGGESTIONS=true
ENABLE_PDF_REPORTS=true

# AWS Configuration (for Lambda deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Security
JWT_SECRET=your-secret-key-here
SESSION_SECRET=your-session-secret-here
