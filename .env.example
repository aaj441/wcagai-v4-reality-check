# ================================
# WCAGAI v5 Enterprise Platform
# Environment Configuration
# ================================

# Server Configuration
PORT=3000
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (PostgreSQL 16)
DATABASE_URL="postgresql://user:password@localhost:5432/wcagai_v5?schema=public"

# Redis Configuration (Redis 7.x)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication & Security
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production

# AI & LangChain Configuration
OPENAI_API_KEY=your-openai-api-key-here
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langchain-api-key-here
LANGCHAIN_PROJECT=wcagai-v5

# Light Core (Ethics Validation)
LIGHT_CORE_ENABLED=true
LIGHT_CORE_LOG_PATH=./logs/light-core

# Scanner Configuration
MAX_CONCURRENT_SCANS=3
SCAN_TIMEOUT_MS=30000
CACHE_TTL_HOURS=24
WCAG_LEVELS=A,AA,AAA
TEST_SECTION_508=true
TEST_EN_301_549=true

# Document Generation
GENERATION_OUTPUT_PATH=./generated-documents
GENERATION_EXPIRY_HOURS=72
MAX_BULK_DOCUMENTS=10000

# BullMQ Configuration
BULLMQ_CONCURRENCY=10
BULLMQ_MAX_RETRIES=3
BULLMQ_BACKOFF_DELAY=5000

# OAuth2 Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_MFA=true
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=
METRICS_ENABLED=true

# External APIs (Optional)
SERPAPI_KEY=your-serpapi-key-here
