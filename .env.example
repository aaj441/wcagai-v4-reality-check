# Server Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration
# Railway will auto-provide REDIS_URL when you add the Redis plugin
REDIS_URL=redis://localhost:6379

# API Keys
# Get your SerpAPI key from: https://serpapi.com/manage-api-key
SERPAPI_KEY=your_serpapi_key_here

# Scanner Configuration
MAX_CONCURRENT_SCANS=3
SCAN_TIMEOUT_MS=30000
CACHE_TTL_HOURS=24

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Error Tracking (Sentry)
# Get your Sentry DSN from: https://sentry.io/
# Only enabled in production when SENTRY_DSN is configured
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# CORS Configuration
# Comma-separated list of allowed origins for production
# Example: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=
