{
  "name": "wcagai-v4-reality-check",
  "version": "4.0.0",
  "description": "WCAGAI v4.0 - AI-powered web accessibility scanner with vertical intelligence",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest tests/integration --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "init-db": "node scripts/init-db.js",
    "docker:build": "docker build -t wcagai-v4:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix"
  },
  "keywords": [
    "wcag",
    "accessibility",
    "a11y",
    "scanner",
    "compliance",
    "serpapi",
    "vertical-intelligence"
  ],
  "author": "WCAGAI Team",
  "license": "MIT",
  "dependencies": {
    "express": "4.21.2",
    "dotenv": "16.6.1",
    "helmet": "7.2.0",
    "express-rate-limit": "7.5.1",
    "joi": "17.13.3",
    "axios": "1.13.2",
    "redis": "4.7.1",
    "serpapi": "2.2.1",
    "axe-core": "4.11.0",
    "puppeteer": "21.11.0",
    "winston": "3.18.3",
    "compression": "1.8.1",
    "cors": "2.8.5",
    "swagger-ui-express": "5.0.1",
    "express-validator": "7.3.0",
    "express-mongo-sanitize": "2.2.0",
    "bcryptjs": "2.4.3"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "supertest": "6.3.4",
    "nodemon": "3.1.10",
    "eslint": "8.57.1",
    "prettier": "3.6.2"
  }
}
